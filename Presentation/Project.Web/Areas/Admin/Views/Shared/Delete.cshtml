@model Project.Web.Framework.Models.DeleteConfirmationModel
<div class="modal fade" id="@Model.WindowId">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">@T("Admin.Common.AreYouSure")</h4>
            </div>
            @using (Html.BeginForm(Model.ActionName, Model.ControllerName, new { Id = Model.Id }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    @T("Admin.Common.DeleteConfirmation")
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">@T("Admin.Common.NoCancel")</button>
                    <button type="submit" class="btn btn-primary pull-right">@T("Admin.Common.Delete")</button>
                </div>
            }
        </div>
    </div>
</div>
